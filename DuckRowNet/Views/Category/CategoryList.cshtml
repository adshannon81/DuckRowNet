@using DuckRowNet.Helpers.Object;
@{
    ViewBag.Title = "Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.FaceBookTags = "";
    string subCategory = ViewBag.SubCategory;
    Session["subCategory"] = subCategory;
}

@section scripts {


    <script type="text/javascript">

    $(document).ready(function () {

        $('.flexslider').flexslider();

        $("featureSlide").slideDown("slow");

            $("#dialog").dialog({
                modal: true,
                resizable: false,
                bgiframe: true,
                width: 500,
                height: 230,
                autoOpen: false
            });


            $(".confirmLink").click(function (e) {
                e.preventDefault();
                var theHREF = $(this).attr("href");
                $("#dialog").css('visibility', 'visible');
                $("#dialog").css('display', 'none');

                $("#dialog").dialog('option', 'buttons', {
                    "Confirm": function () {
                        window.location.href = theHREF;
                    },
                    "Cancel": function () {
                        $(this).dialog("close");
                    }
                });
                $("#dialog").dialog("open");
            });
        });
    </script>

}


@{


    ViewBag.MetaDescription = "Find " + subCategory + " classes in your local area and more like Pilates, Yoga, Dance, with DuckRow.Net";
    ViewBag.Title = "Find Classes - DuckRow.Net";

    <text>

        @ClassListing.getHTML(new CompanyDetails() )
        @*@View.ClassInfiniteListing.getHTML(companyDetails)*@
    </text>

}



}