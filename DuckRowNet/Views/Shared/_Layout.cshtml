<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.MetaDescription" />

    <meta property="fb:app_id" content="758922257578494" />
    @{
        var fb = ViewBag.FaceBookTags;
        if (!String.IsNullOrEmpty(fb))
        {
            <text>@(new HtmlString(fb))</text>
        }
    }



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/Default.css" rel="Stylesheet">

    <link href='//fonts.googleapis.com/css?family=Roboto:400,700,400italic,300italic' rel='stylesheet' type='text/css'>

    @RenderSection("css", required: false)

    @Scripts.Render("~/bundles/jquery-basic")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="/Images/duckrow-logo2.png" alt="DuckRow" /></a>
                @*Html.ActionLink("Duck Row", "Index", "Classes", new { companyName = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (String.IsNullOrEmpty(ViewBag.CompanyName))
                    {
                        <li id="Advertise-Now">@Html.ActionLink("Advertise Now", "Create", "Admin")</li>
                    }
                    else
                    {
                        string link = ViewBag.CompanyName + " Classes";
                        <li>@Html.ActionLink(link, "Index", "Classes", new { companyName = ViewBag.CompanyName, classID = "" }, null)</li>
                        <li>@Html.ActionLink("Create", "Create", "Admin", new { companyName = ViewBag.CompanyName, classID = "" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content">
        @Advertisements.LeaderBoard()

        @RenderBody()
        <hr style="clear:both;" />
        <footer>
            <div class="container">
                <div class="col-sm-4 text-left">
                    <div class="addthis_horizontal_follow_toolbox"></div>
                </div>
                <div class="col-sm-4">
                    <!--
                            <a class="twitter-timeline" href="https://twitter.com/DuckRowNet" data-widget-id="727483849513525248">Tweets by @@DuckRowNet</a>
                        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                        -->
                </div>
                <div class="col-sm-4 text-right">
                    <p><a href="http://duckrow.net/Home/About">About DuckRow.Net</a></p>
                    <p>
                        <ul class="inlineblockList">
                            <li class="">
                                <a href="https://www.facebook.com/duckrow.net" target="_blank">
                                    <img alt="DuckRow on Facebook" src="/Images/facebook-duckrow.png" height="23">
                                </a>
                            </li>
                            <li class="">
                                <a href="https://twitter.com/DuckRowNet" target="_blank">
                                    <img alt="DuckRow on Twitter" src="/Images/twitter.png" height="23">
                                </a>
                            </li>
                        </ul>
                    </p>
                    <p><a href="http://qwerty.ie/">Web Agency</a> - Qwerty.ie</p>
                    <p>&copy; @DateTime.Now.Year - Duck Row Net</p>

                </div>


            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="http://code.jquery.com/jquery-migrate-1.2.1.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

